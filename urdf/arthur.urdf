<?xml version="1.0"?>
<robot name="arthur">
  <link name="world" />
  <link name="body">
    <visual>
      <geometry>
        <box size="0.3 0.4 0.5"/>
      </geometry>
      <origin xyz="0 0 0.25" />
      <material name="red">
       <color rgba="1 0 0 0.25"/>
      </material>
    </visual>
  </link>
  <link name="camera">
    <visual>
      <geometry>
        <box size="0.03 0.003 0.003"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
      <origin xyz="0.015 0 0"/>
    </visual>
  </link>

  <link name="yaw">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.003"/>
      </geometry>
    </visual>
  </link>
  
  <link name="eye_pitch">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0.05" />
    </visual>
  </link>

  <link name="left_eye">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.005"/>
      </geometry>
      <origin xyz="0 0 0.05" />
    </visual>
  </link>
  <link name="right_eye">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.005"/>
      </geometry>
      <origin xyz="0 0 0.05" />
    </visual>
  </link>

  <link name="neck">
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.02"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
      <origin xyz="0.0 0 0.15" />
    </visual>
  </link>

  <joint name="fix" type="fixed">
    <parent link="world"/>
    <child link="body"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="body_camera" type="fixed">
    <parent link="body"/>
    <child link="camera"/>
    <origin xyz="0.15 0 0.35" rpy="0 -0.2 0" />
  </joint>

  <joint name="yaw_joint" type="revolute">
    <parent link="body"/>
    <child link="yaw"/>
    <origin xyz="0 0 0.45" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
    <limit lower="-1" upper="1" effort="1000" velocity="1" />
  </joint>
  <joint name="pitch_joint" type="revolute">
    <parent link="yaw"/>
    <child link="neck"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1" upper="1" effort="1000" velocity="1" />
  </joint>
  <joint name="eye_pitch_joint" type="revolute">
    <parent link="neck"/>
    <child link="eye_pitch"/>
    <origin xyz="0.07 0 0.3" rpy="0 -1.570796 0" />
    <axis xyz="0 1 0"/>
    <limit lower="-0.3" upper="0.3" effort="1000" velocity="1" />
  </joint>
  <joint name="left_eye_joint" type="revolute">
    <parent link="eye_pitch"/>
    <child link="left_eye"/>
    <origin xyz="0 0.05 0" rpy="0 -3.14 0" />
    <axis xyz="1 0 0"/>
    <limit lower="-0.7" upper="0.7" effort="1000" velocity="1" />
  </joint>
  <joint name="right_eye_joint" type="revolute">
    <parent link="eye_pitch"/>
    <child link="right_eye"/>
    <origin xyz="0 -0.05 0" rpy="0 -3.14 0" />
    <axis xyz="1 0 0"/>
    <limit lower="-0.7" upper="0.7" effort="1000" velocity="1" />
  </joint>
</robot>
