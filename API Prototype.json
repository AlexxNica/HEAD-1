{
	// EmotionStates: (-1 to +1 float values). Valid input can be any combination of emotions
	// Inside Blender, values will slowly decay to neutral if no new values are provided,
	// this ensure the character doesn't looks stiff or freezes in an awkward pose.
	"EmotionStates":{
		"sadnessHappiness":0.0,
		"irritationAmusement":0.0,
		"confusionComprehension":0.0,
		"BoredomEngagement":0.0,
		"recoilSurprise":0.0,
	},

	// EmotionGuestures: send an indivual action to the character.
	// Duration, magnitude, speed controls the length, strength and swiftness of the animation.
	// Priority is used to override one animation over another.
	// Guestures of the same weight will be played back at the same time.
	// Higher weight guestures will kill lower weight ones (via a quick blend out)
	"EmotionGuestures":{
		"smile":{"duration":2.0, "magnitude":0.8, "speed":1.0, "weight": 0},
		"yawn":{"duration":4.0, "magnitude":0.3, "speed":0.8, "weight": 0},
		"nodYes":{"duration":4.0, "magnitude":0.3, "speed":0.8, "weight": 0.5},
		"nodNo":{"duration":4.0, "magnitude":0.3, "speed":0.8, "weight": 0},
		"scan":{"duration":4.0, "magnitude":0.3, "speed":0.8, "weight": 0},

	},

	// Primary Targets location defines the main focus for the character
	// knowing the location, allows head and eye tracking
	// the rotation allows for head-tilt matching
	// scale affects how much the eyes to drift when locked onto a target
	"PrimaryTarget":{
		"id":1,
		"location":[0,0,10],
		"orientation":[0,0,0],
		"scale":[2,2,3],
	},

	// Secondary Targets location defines the minor focus for the character
	"SecondaryTarget":{
		"id":2,
		"location":[0,20,10],
		"orientation":[0,0,0],
		"scale":[1,1,2],
	},

	// Autonomous override
	"AutonomousActions":{
		"blink":{"magnitude":0.8, "speed":1.0},
		"breathing":{"magnitude":0.8, "speed":1.0},
	}
}